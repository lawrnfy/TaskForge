{
  "name": "TaskForge â€” Focus & Credits",
  "description": "Forge your focus: Pomodoro timer, smart reminders, streaks, and credits to earn free months.",
  "version": "0.1.0",
  "manifest_version": 3,
  "action": {
    "default_title": "TaskForge",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "permissions": [
    "storage",
    "notifications",
    "alarms",
    "idle",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
